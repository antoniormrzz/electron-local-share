{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "outDir": "./dist/",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts", "node_modules/@types"],
  "exclude": ["node_modules"],
  "typeAcquisition": { "include": ["node"] }
}
